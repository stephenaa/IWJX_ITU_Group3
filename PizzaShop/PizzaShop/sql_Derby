drop table users;
drop table products;
drop table orders;
drop table orderlines;

create table users
(
    userid int GENERATED BY DEFAULT AS IDENTITY NOT NULL PRIMARY KEY,
    password varchar(20) NOT NULL,
    name varchar(20) NOT NULL,
    address varchar(20) NOT NULL,
    zipcode varchar(20) NOT NULL,
    phone varchar(20) NOT NULL,
    email varchar(50) NOT NULL,
    role int NOT NULL    
); 


create table products(
    productid int GENERATED BY DEFAULT AS IDENTITY NOT NULL PRIMARY KEY,
    name varchar(50) NOT NULL,
    description varchar(3000) NOT NULL, 
    price int
);


create table orders(
    orderid bigint NOT NULL,
    userid int NOT NULL,
    comment varchar(200), 
    deliverytime date,
    PRIMARY KEY(orderid)
);

create table orderlines(
    lineid int GENERATED BY DEFAULT AS IDENTITY NOT NULL PRIMARY KEY,
    fk_orderid bigint NOT NULL,
    fk_productid int NOT NULL, 
    qty int NOT NULL
);


